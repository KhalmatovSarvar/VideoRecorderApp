<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Start icon for default and pressed state -->
    <item android:drawable="@drawable/ic_start_record" android:state_pressed="false" />
    <item android:drawable="@drawable/ic_start_record" android:state_pressed="true" />

    <!-- Stop icon for focused and disabled state -->
    <item android:drawable="@drawable/ic_stop_record" android:state_focused="true" />
    <item android:drawable="@drawable/ic_stop_record" android:state_enabled="false" />

    <!-- Start icon for pressed state after stop button is pressed -->
    <item android:drawable="@drawable/ic_start_record" android:state_pressed="true" android:state_enabled="false"/>
</selector>